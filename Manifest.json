{
    "name" : "Shiven's Ad Blocker",
    "version" : "1.0",
    "description" : "Blocks ads on Youtube",

    "content scripts" : [
        {
            "matches" : ["<all_urls>"],
            "run_at" : ["document_idle"],
            "js" : ["content.js"]
        }
    ],

    "permissions" : [
            "tabs",
            "activeTab"
        ],

    "manifest_version" : 2
}